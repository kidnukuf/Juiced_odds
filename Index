    <script>
        let allGames = [];
        let currentFilter = 'all';

        async function loadGames() {
            try {
                const response = await fetch('tables/games?limit=100&sort=-created_at');
                const data = await response.json();
                allGames = data.data.filter(game => game.active);
                renderGames();
            } catch (error) {
                console.error('Error loading games:', error);
                document.getElementById('gamesGrid').innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-exclamation-triangle"></i>
                        <h3>Error loading games</h3>
                        <p style="color: #888;">Please try again later</p>
                    </div>
                `;
            }
        }

        function renderGames() {
            const grid = document.getElementById('gamesGrid');
            
            const filteredGames = currentFilter === 'all' 
                ? allGames 
                : allGames.filter(game => game.category === currentFilter);

            if (filteredGames.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <h3>No games available</h3>
                        <p style="color: #888;">Check back soon or add games via the admin panel</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = filteredGames.map(game => `
                <div class="game-card" onclick="playGame('${game.game_url}')">
                    ${game.featured ? '<span class="featured-badge">⚡ Featured</span>' : ''}
                    <div class="game-image">
                        ${game.image_url ? 
                            `<img src="${game.image_url}" alt="${game.title}">` : 
                            `<div class="default-image"></div>`
                        }
                    </div>
                    <div class="game-info">
                        <span class="game-category">${game.category || 'Uncategorized'}</span>
                        <h3 class="game-title">${game.title}</h3>
                        <p class="game-description">${game.description || 'No description available'}</p>
                        <button class="play-btn">
                            <i class="fas fa-play-circle"></i> Play Now
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function playGame(url) {
            window.location.href = url;
        }

        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                currentFilter = btn.dataset.category;
                renderGames();
            });
        });

        document.querySelectorAll('<span class="cursor">█</span>
